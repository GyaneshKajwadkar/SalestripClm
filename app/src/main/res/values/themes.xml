<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Salestrip" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorControlHighlight">@color/gray</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="full_Screen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/appColor</item>
    </style>


    <style name="EditText_base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/appDarkColor</item>
    </style>

    <style name="blueCheck">
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="Theme.Salestrip.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Salestrip.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Salestrip.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_round</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="header_text">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="darkblue_background_white_text">
        <item name="android:background">@color/appDarkColor</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="white_background_black_text">
        <item name="android:background">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="marginTenLeftRight">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="generalCard">
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">7dp</item>
    </style>

    <style name="whiteTextBold18">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="simpleBtnWith20LF">
        <item name="android:layout_marginTop">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/appDarkColor</item>
    </style>

    <style name="materialButtonWithImage">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">5dp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="ToggleButtonGroupStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_selector</item>
        <item name="android:textColor">@color/toggletext</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="editTextWithRound">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_shape_edit</item>

    </style>

    <style name="my_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">60%</item>
        <item name="windowMinWidthMinor">60%</item>
    </style>

    <style name="capsul_editText_simple" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/edittext_capsul</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="capsul_editText_inputRestrict" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/edittext_capsul</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="cursorVisible">false</item>
        <item name="focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="editTextHeader_text" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/appColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>