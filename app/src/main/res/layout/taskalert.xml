<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/border_rl"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/appDarkColor"/>
            <LinearLayout
                android:layout_below="@+id/border_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/mainHeading_tv"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modify task!"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appColor"
                    android:text="Doctor"
                    android:textSize="18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:overlapAnchor="false"
                        android:id="@+id/doctor_spinner"
                        style="@style/spinner_style"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appColor"
                    android:text="Select Date"
                    android:textSize="18sp"/>


                <androidx.cardview.widget.CardView
                    app:cardElevation="5dp"
                    android:outlineSpotShadowColor="@color/purple_700"
                    android:outlineAmbientShadowColor="@color/purple_700"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="@color/appDarkColor"/>

                        <TextView
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:layout_gravity="center"
                            android:text="Select Date"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/selectDate_tv"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>





                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appColor"
                        android:text="Time"
                        android:textSize="18sp"/>


                    <androidx.cardview.widget.CardView
                        app:cardElevation="5dp"
                        android:outlineSpotShadowColor="@color/purple_700"
                        android:outlineAmbientShadowColor="@color/purple_700"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/start_watch"
                                android:tint="@color/appDarkColor"/>

                            <TextView
                                android:id="@+id/startTime"
                                android:textSize="18sp"
                                android:gravity="center|left"
                                android:layout_gravity="center"
                                android:text="Time"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appColor"
                    android:text="Task"
                    android:textSize="18sp"/>


                <androidx.cardview.widget.CardView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="5dp"
                    android:outlineSpotShadowColor="@color/purple_700"
                    android:outlineAmbientShadowColor="@color/purple_700"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:background="@null"
                            android:id="@+id/remark_et"
                            android:lines="3"
                            android:textSize="18sp"
                            android:gravity="center|left"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:id="@+id/cancel_btn"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modify"
                        android:id="@+id/exit_btn"/>

                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>


</RelativeLayout>