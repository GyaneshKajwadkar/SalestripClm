<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentlinearL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/generalCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_background_black_text"
                    android:textColor="@color/appColor"
                    android:text="title"
                    android:textAlignment="textStart"
                    android:padding="2dp"
                    android:id="@+id/titlePobproduct_tv"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/uom_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UOM"/>

                <TextView
                    android:id="@+id/division_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Division" />
                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/scheme_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scheme"/>

            </LinearLayout>

            <EditText
                android:hint="Qty"
                android:id="@+id/qty_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_shape_edit"
                android:layout_weight="0.7"
                android:padding="5dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:layout_margin="5dp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>