<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select action"
                android:textColor="@color/purple_200"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="10dp"
                android:id="@+id/edetailing_btn"
                android:backgroundTint="@color/appDarkColor"
                android:background="@drawable/capsulbtn_login"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Normal edetailing"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:backgroundTint="@color/appDarkColor"
                android:layout_marginTop="10dp"
                android:id="@+id/presentation_btn"
                android:background="@drawable/capsulbtn_login"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Custom presentation"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/appColor"
                android:id="@+id/cancel_btn"
                android:background="@drawable/capsulbtn_login"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Cancel"
                android:textColor="@color/white" />





        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>